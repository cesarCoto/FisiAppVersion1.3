<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Styles por google-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Tema principal-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Styles por Cesar Uriel Coto Coazozon -->
    <!--TODO: Aqui estan los estilos del fragment home-->
    <style name="cardViewIzquierda">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/paddinbottomcardizquierda_16dp</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/dimen_4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/repple</item>
        <item name="android:foreground">@drawable/repple</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
    </style>

    <style name="cardViewDerecha">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_4dp</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/repple</item>
        <item name="android:foreground">@drawable/repple</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
    </style>

    <!--TODO: Aqui estan los estilos del fragment exams-->
    <style name="cardExamenes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
    </style>

    <style name="imagenExamen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="buttonTeorico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/teorico_title</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
    </style>
    <style name="buttonPractico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/practico_title</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="titleExamCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/bgcolorwhite</item>
    </style>

    <style name="tabletButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bgcolorwhite</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
    </style>

    <!--TODO: Aqui estan los etilos de los elementos del fragment videos-->
    <style name="cardViewVideos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
    </style>

    <style name="layoutCardVideos">
        <item name="android:paddingLeft">@dimen/dimen_16dp</item>
        <item name="android:paddingRight">@dimen/dimen_16dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="imageViewCardVideos">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="textViewCardVideos">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="imageShareCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_share_black_24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/dimen_4dp</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
    </style>

    <!--TODO: Aqui estan los estilos de los elementos de la actividad About-->
    <style name="cardViewAboutActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/bgcolorwhite</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
    </style>

    <style name="textTitleAboutActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemAboutActivityAbout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="imageDevAboutActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/dimen_16dp</item>
        <item name="android:tint">#333</item>
        <item name="android:src">@drawable/ic_developer_24dp</item>
    </style>

    <style name="textItemAboutActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/dimen_16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="imageDrawAboutActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/dimen_16dp</item>
    </style>
    <!--TODO: elementos de las actividades principales-->
    <style name="layoutPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="cardElevation">@dimen/carddimen_2dp</item>
        <item name="cardCornerRadius">@dimen/carddimen_2dp</item>
    </style>

    <style name="layoutInterno">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="titleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_8dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_8dp</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="parafoTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="subtitleTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="frameLayoutImageContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_8dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4dp</item>
    </style>

    <style name="imageViewInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="titleExamTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textAlignment">center</item>
    </style>

