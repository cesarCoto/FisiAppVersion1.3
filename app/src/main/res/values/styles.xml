    <style name="radioButtonRespuesta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonCalificar">
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">clip_horizontal</item>
