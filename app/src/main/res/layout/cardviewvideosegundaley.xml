<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardVideoSegundaLey"
    style="@style/cardViewVideos">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layoutContentSegundaley"
        style="@style/layoutCardVideos">

        <ImageView
            style="@style/imageViewCardVideos"
            android:src="@drawable/segunda_ley_new_img"/>

        <TextView
            style="@style/textViewCardVideos"
            android:text="Ley fundamental de la dinamica"/>
    </LinearLayout>
        <ImageView
            android:id="@+id/imageShareSegundaleyVideo"
            style="@style/imageShareCardView"
            android:layout_alignBottom="@id/layoutContentSegundaley" />
    </RelativeLayout>
</android.support.v7.widget.CardView>