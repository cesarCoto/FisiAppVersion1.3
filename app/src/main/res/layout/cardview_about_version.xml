<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginLeft="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_8dp"
    app:cardCornerRadius="@dimen/carddimen_2dp"
    app:cardElevation="@dimen/carddimen_2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/imageViewIconAboutActivity"
            android:layout_width="64dp"
            android:layout_height="128dp"
            android:background="@color/gray_very_light"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_toEndOf="@id/imageViewIconAboutActivity">

                <TextView
                    android:id="@+id/textViewNameAppAboutActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="FisiApp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNameAppAboutActivity"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:lineSpacingExtra="@dimen/dimen_8dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:text="Version 1.3"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>