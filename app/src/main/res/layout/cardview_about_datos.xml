<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardViewAboutActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDevelopersAboutActivity"
            style="@style/textTitleAboutActivity"
            android:text="@string/developers_title" />
        <View
            android:id="@+id/viewNum1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textViewDevelopersAboutActivity"
            android:background="@color/bg_color"/>
        <LinearLayout
            android:id="@+id/linearLayoutName1"
            style="@style/itemAboutActivityAbout"
            android:layout_below="@id/viewNum1">
                <ImageView
                    style="@style/imageDevAboutActivity"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    style="@style/textItemAboutActivity"
                    android:text="@string/jose_manuel_couti_o_vazques"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutName2"
            style="@style/itemAboutActivityAbout"
            android:layout_below="@id/linearLayoutName1">
            <ImageView
                style="@style/imageDevAboutActivity"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                style="@style/textItemAboutActivity"
                android:text="@string/cesar_uriel_coto_coazozon"/>
        </LinearLayout>
        <LinearLayout
        android:id="@+id/linearLayoutName3"
        style="@style/itemAboutActivityAbout"
        android:layout_below="@id/linearLayoutName2">
        <ImageView
            style="@style/imageDevAboutActivity"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            style="@style/textItemAboutActivity"
            android:text="@string/manuel_de_jesus_couti_o_vazques" />
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>