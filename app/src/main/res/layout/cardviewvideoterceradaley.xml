<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardVideoTerceraLey"
    style="@style/cardViewVideos"
    android:layout_marginBottom="@dimen/dimen_8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layoutContentTerceraley"
        style="@style/layoutCardVideos">

        <ImageView
            style="@style/imageViewCardVideos"
            android:src="@drawable/tercera_lew_new_img"/>

        <TextView
            style="@style/textViewCardVideos"
            android:text="Ley de accion y reaccion"/>
    </LinearLayout>
        <ImageView
            android:id="@+id/imageShareTerceraleyVideo"
            style="@style/imageShareCardView"
            android:layout_alignBottom="@id/layoutContentTerceraley" />
    </RelativeLayout>
</android.support.v7.widget.CardView>