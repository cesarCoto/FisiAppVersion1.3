<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardViewExamen"
    tools:ignore="TooManyViews">

    <LinearLayout
       style="@style/layoutContainer">

        <LinearLayout
            android:id="@+id/problemaUnoVectores"
            style="@style/layoutPreguntas">
        <TextView
            style="@style/textViewProblema"
            android:text="@string/problema1_exampractico_vectores"/>
        <android.support.design.widget.TextInputLayout
            style="@style/textInputLayout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/respuesta_newtons_problema_uno_vectores"
                style="@style/textInputTypeNumber"
                android:hint="@string/newtons"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/respuesta_grados_problema_uno_vectores"
                style="@style/textInputTypeNumber"
                android:hint="@string/grados"/>
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/problemaDosVectores"
            style="@style/layoutPreguntas">
            <TextView
                style="@style/textViewProblema"
                android:text="@string/problema2_exampractico_vectores"/>

            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_metros_problema2_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/metros"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_grados_problema2_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/grados"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/problemaTresVectores"
            style="@style/layoutPreguntas">
            <TextView
                style="@style/textViewProblema"
                android:text="@string/problema3_exampractico_vectores"/>

            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_centimetros_problema3_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/centimetros"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_grados_problema3_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/grados"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preguntaCuatroConversiones"
            style="@style/layoutPreguntas">
            <TextView
                style="@style/textViewProblema"
                android:text="@string/problema4_exampractico_vectores"/>


            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_centimetros_problema4_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/centimetros"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/textInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/respuesta_grados_problema4_uno_vectores"
                    style="@style/textInputTypeNumber"
                    android:hint="@string/grados"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            style="@style/buttonCalificar"/>
    </LinearLayout>
</android.support.v7.widget.CardView>